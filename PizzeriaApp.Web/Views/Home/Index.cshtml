        <a asp-controller="Pizzas" asp-action="Index" class="btn btn-outline-light btn-lg">View Menu</a>
    </div>
    <div class="col-6 my-auto">
        <img src="https://demo.w3layouts.com/demos_new/template_demo/30-03-2020/pizzapan-liberty-demo_Free/1781439321/web/assets/images/pizza-full.png" alt="Delicious pizza" />
