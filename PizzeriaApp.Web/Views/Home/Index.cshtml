@{
    ViewData["Title"] = "Home Page";
}

@section Styles{ 
    <style>
        body {
            background-color: #dc3545;
        }

        .footer {
            color: white !important;
        }

        i {
            color:rgba(255, 255, 255, 0.9) !important;
        }

        i:hover {
            color: white !important;
        }

        h1 {
            color:white;
            font-size: 5rem;
        }

        .container main {
            height: 100%;
        }

        .navbar {
            background-color: #dc3545 !important;
        }

        .nav-link, .navbar-brand {
            color: rgba(255, 255, 255, 0.9) !important;
        }
    </style>
}

