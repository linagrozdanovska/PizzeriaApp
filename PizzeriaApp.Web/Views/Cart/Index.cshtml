@model PizzeriaApp.Domain.DTO.CartDto

<h1>Cart</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col" class="text-right" style="width: 5rem;">#</th>
            <th scope="col">Pizza</th>
            <th scope="col">Size</th>
            <th scope="col" class="text-right">Price</th>
            <th scope="col" class="text-right">Quantity</th>
            <th scope="col" class="text-right">Total</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.PizzasInCart.Count; i++)
        {
            var item = Model.PizzasInCart[i];
        <tr>
            <th scope="row" class="text-right" style="width: 5rem;">@(i + 1)</th>
            <td>@item.Pizza.PizzaName</td>
            <td>@item.PizzaSize</td>
            <td class="text-right">$@item.PizzaPrice</td>
            <td class="text-right">@item.Quantity</td>
            <td class="text-right">$@(item.PizzaPrice * item.Quantity)</td>
            <td class="text-center"><a asp-route-id="@item.PizzaId" asp-action="DeletePizzaFromCart" class="btn btn-danger">Delete</a></td>
        </tr>
        }
    </tbody>
    <tfoot class="border-bottom">
        <tr>
            <td colspan="5"><strong>Total Price</strong></td>
            <td class="text-right"><strong>$@Model.TotalPrice</strong></td>
            <td></td>
        </tr>
    </tfoot>
</table>