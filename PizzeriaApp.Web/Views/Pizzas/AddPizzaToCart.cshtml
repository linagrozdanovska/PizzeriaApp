@model PizzeriaApp.Web.Models.DTO.AddPizzaToCartDto

@{
    ViewData["Title"] = "Add Pizza To Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Pizza to Cart</h1>

<div class="row">
    <div class="col-4">
        <form asp-action="AddPizzaToCart" method="post">
            <input type="hidden" asp-for="PizzaId" />
            <div class="form-group">
                <label asp-for="SelectedPizza.PizzaName" class="control-label"></label>
                <input disabled asp-for="SelectedPizza.PizzaName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>