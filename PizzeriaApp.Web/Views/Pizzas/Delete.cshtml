@model PizzeriaApp.Domain.DomainModels.Pizza

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mb-3">Are you sure you want to delete this pizza?</h1>

<div class="row">
    <div class="col-md-6 mx-auto text-center">
        <div class="form-group mb-4">
            <label class="control-label font-weight-bold d-block">@Html.DisplayNameFor(model => model.PizzaName)</label>
            @Html.DisplayFor(model => model.PizzaName)
        </div>
        <div class="form-group mb-4">
            <label class="control-label font-weight-bold d-block">@Html.DisplayNameFor(model => model.PizzaIngredients)</label>
            @Html.DisplayFor(model => model.PizzaIngredients)
        </div>
        <div class="form-group mb-4">
            <label class="control-label font-weight-bold d-block">@Html.DisplayNameFor(model => model.PizzaPrice)</label>
            @Html.DisplayFor(model => model.PizzaPrice)
        </div>
        <div class="form-group mb-4">
            <label class="control-label font-weight-bold d-block">@Html.DisplayNameFor(model => model.PizzaImage)</label>
            @Html.DisplayFor(model => model.PizzaImage)
        </div>
    </div>
</div>

    
<div class="row mx-auto text-center mt-3">
    <div class="col-md-12 mx-auto">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-secondary">Back to Menu</a>
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
     </div>
</div>

